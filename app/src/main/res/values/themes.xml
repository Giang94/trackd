<resources>

    <style name="Theme.Trackd" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Colors -->
        <item name="colorPrimary">@color/trackd_primary</item>
        <item name="colorPrimaryVariant">@color/trackd_primary_variant</item>
        <item name="colorOnPrimary">@color/trackd_on_primary</item>

        <item name="colorSecondary">@color/trackd_secondary</item>
        <item name="colorSecondaryVariant">@color/trackd_secondary_variant</item>
        <item name="colorOnSecondary">@color/trackd_on_secondary</item>

        <item name="android:statusBarColor">@color/trackd_statusbar</item>
        <item name="android:navigationBarColor">@color/trackd_navbar</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/trackd_background</item>
        <item name="android:windowBackground">@color/trackd_background</item>

        <!-- Make system bars opaque (so nothing goes under them again!) -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.JPTrackd" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">#42aaf5</item>
        <item name="colorPrimaryVariant">@color/jp_accent_variant</item>
        <item name="colorOnPrimary">@color/jp_on_primary</item>

        <item name="colorSecondary">@color/jp_accent</item>
        <item name="colorSecondaryVariant">@color/jp_accent_variant</item>
        <item name="colorOnSecondary">@color/jp_on_accent</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/jp_bg</item>
        <item name="colorSurface">@color/jp_surface</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/jp_statusbar</item>
        <item name="android:navigationBarColor">@color/jp_navbar</item>

        <!-- Make system bars opaque (so nothing goes under them again!) -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="Theme.Trackd.Vintage" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Core Colors -->
        <item name="colorPrimary">@color/vinyl_accent_primary</item>
        <item name="colorPrimaryVariant">@color/vinyl_accent_variant</item>
        <item name="colorOnPrimary">@color/vinyl_text_on_primary</item>

        <item name="colorSecondary">@color/vinyl_accent_secondary</item>
        <item name="colorSecondaryVariant">@color/vinyl_accent_secondary_variant</item>
        <item name="colorOnSecondary">@color/vinyl_text_secondary</item>

        <!-- Background / Surface -->
        <item name="android:windowBackground">@color/vinyl_bg</item>
        <item name="colorSurface">@color/vinyl_surface</item>
        <item name="colorOnSurface">@color/vinyl_text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/vinyl_text_primary</item>
        <item name="android:textColorSecondary">@color/vinyl_text_secondary</item>

        <!-- Status / Navigation Bars -->
        <item name="android:statusBarColor">@color/vinyl_statusbar</item>
        <item name="android:navigationBarColor">@color/vinyl_navbar</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="Theme.TrackD.MD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/td_bg</item>
        <item name="colorSurface">@color/td_surface</item>
        <item name="colorOnSurface">@color/td_onSurface</item>
        <item name="colorOnBackground">@color/td_onBg</item>

        <!-- Primary -->
        <item name="colorPrimary">@color/td_primary</item>
        <item name="colorPrimaryVariant">@color/td_primaryVariant</item>
        <item name="colorOnPrimary">@color/td_onPrimary</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/td_secondary</item>
        <item name="colorSecondaryVariant">@color/td_secondaryVariant</item>
        <item name="colorOnSecondary">@color/td_onSecondary</item>

        <!-- Accent -->
        <item name="colorAccent">@color/td_accent</item>

        <!-- Text -->
        <item name="android:textColor">@color/td_textPrimary</item>

        <!-- Card -->
        <item name="cardViewStyle">@style/Widget.TrackD.CardView</item>

        <!-- EditText -->
        <item name="textInputStyle">@style/Widget.TrackD.TextInput</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- CardView -->
    <style name="Widget.TrackD.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/td_surface</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- TextInputs -->
    <style name="Widget.TrackD.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/td_textSecondary</item>
        <item name="android:textColor">@color/td_textPrimary</item>
        <item name="boxStrokeColor">@color/td_primary</item>
    </style>
</resources>
