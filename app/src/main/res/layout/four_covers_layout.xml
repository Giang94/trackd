<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
            android:elevation="5dp"
            android:background="#80000000"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <TextView
            android:id="@+id/tvOverlayCount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="4+"
            android:textColor="@color/td_surface"
            android:textSize="24sp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <ImageView
            android:elevation="0dp"
            android:id="@+id/ivCover1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DDD"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivCover2"
            app:layout_constraintBottom_toTopOf="@id/ivCover3"
            app:layout_constraintDimensionRatio="1:1" />

    <ImageView
            android:elevation="0dp"
            android:id="@+id/ivCover2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DDD"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivCover1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ivCover4"
            app:layout_constraintDimensionRatio="1:1" />

    <ImageView
            android:elevation="0dp"
            android:id="@+id/ivCover3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DDD"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/ivCover1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivCover4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1" />

    <ImageView
            android:elevation="0dp"
            android:id="@+id/ivCover4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DDD"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/ivCover2"
            app:layout_constraintLeft_toRightOf="@id/ivCover3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1" />
</androidx.constraintlayout.widget.ConstraintLayout>
