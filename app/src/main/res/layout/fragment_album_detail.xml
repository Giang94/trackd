<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingRight="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:elevation="8dp"
            app:cardCornerRadius="16dp">

        <!-- Add FrameLayout to overlay buttons -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- SCROLL CONTENT -->
            <androidx.core.widget.NestedScrollView
                    android:padding="@dimen/padding_medium"
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">

                <LinearLayout
                        android:id="@+id/contentContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                    <!-- Album cover -->
                    <ImageView
                            android:id="@+id/albumCover"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop" />

                    <!-- Album title -->
                    <TextView
                            android:padding="@dimen/padding_small"
                            android:id="@+id/albumTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Album Title"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                    <!-- Divider -->
                    <com.google.android.material.divider.MaterialDivider
                            android:padding="@dimen/padding_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    <!-- Album year + format -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <TextView
                                android:padding="@dimen/padding_small"
                                android:id="@+id/albumFormat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="Vinyl"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="•"
                                android:padding="@dimen/padding_small"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <TextView
                                android:padding="@dimen/padding_small"
                                android:id="@+id/albumYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="1997 •"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Divider -->
                    <com.google.android.material.divider.MaterialDivider
                            android:padding="@dimen/padding_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Artists"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="•"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <LinearLayout
                            android:id="@+id/artistListContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    <!-- Open In section -->
                    <LinearLayout
                            android:paddingTop="@dimen/padding_small"
                            android:id="@+id/openInContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                        <com.google.android.material.divider.MaterialDivider
                                android:padding="@dimen/padding_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Open in"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="•"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <ImageButton
                                android:id="@+id/btnOpenSpotify"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Open in Spotify"
                                android:src="@drawable/ic_spotify_logo" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- OVERLAY ICONS (edit, delete, etc.) -->
            <LinearLayout
                    android:layout_marginTop="@dimen/padding_medium"
                    android:id="@+id/topRightButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_gravity="top|end">

                <ImageButton
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/btnEdit"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="Edit"
                        android:src="@drawable/ic_edit" />

                <ImageButton
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/btnDelete"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="Delete"
                        android:src="@drawable/ic_delete" />
            </LinearLayout>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
